<% include top %>

<div class="row"><div class="col-xs-12">
  
<div class="form-group">
  <form method='POST' action='/sensors/destroy/confirm'>
    <input type='hidden' class="form-control" name='sensorkey' value='<%= sensor ? sensorkey : "" %>' />
    <p class="breadcrumb warning">Delete <%= sensor.name %> ?</p>  
    <p>If you delete the sensor it will no longer be available in the platform.</p>
    
    <div class="row">    
      <div class="btn-group btn-group-justified">
        <div class="btn-group">
          <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>        
        </div>
        <div class="btn-group">
          <a class="btn btn-default" href="/sensors/view/<%= sensorkey %>" role="button"><span class="glyphicon glyphicon-remove-sign"></span> Cancel</a>
        </div>
      </div>
    </div>

  </form>
</div>
  
</div></div>

<% include bottom %>
